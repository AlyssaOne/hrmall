<odoo>
    <data>
        <template id="index">
                <title>注册</title>
                <t t-call="website.layout">
                    <t t-set="additional_title">hr 注册</t>
                    <div id="wrap" class="col-center-block">
                        <div class="row">
                            <section id="forms">
                        <form t-attf-class="s_website_form container-fluid form-horizontal" role="form" t-attf-action="/login{{ '?debug' if debug else '' }}" method="post">
    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>


                        <div class="col-title-block">
                    <p>
                    <h1>hr 注册</h1>
                   </p>
                    </div>
                    <div class="col-center-block">
                    <p>
                    <div class="form-group form">
                        <label for="name">name</label>
                        <input type="text" name="name" size="40" required="True" class="o_website_form_input form-control"/>
                    </div>
                    </p>
                    <p>
                    <div class="form-group">
                        <label for="email">email</label>
                        <input type="text" name="email" size="40" required="True" class="o_website_form_input form-control"/>
                    </div>
                    </p>
                    <div class="form-group">
                    <p>
                        <label for="password">password<br/>
                            <input id="password" class="o_website_form_input input form-control" type="password" size="70" required="True" name="password"/>
                        </label>
                    </p>
    	            </div>
                        <div class="form-group">
                            <p>
                                <label for="card_num">cardNumber</label>
                                <input id="card_num" name="card_num" class="o_website_form_input input form-control" type="text" size="40"/>
                            </p>
                            <p>
                                <label for="tel">Tel</label>
                                <input id="tel" name="tel" class="o_website_form_input input form-control" type="text" size="40"/>
                            </p>
                            <p>
                                <label for="gender">Gender</label>
<select name="gender" class="o_website_form_input input form-control">
  <option value ="m">Man</option>
  <option value ="w">Woman</option>
</select>
</p>
                            <p>
                                <label for="birth">Birthday</label>
                                <input id="birth" name="birth" class="o_website_form_input input form-control" type="date" size="40"/>
                            </p>
                            <p>
                                <label for="address">Address</label>
                                <input id="addr" name="addr" class="o_website_form_input input form-control" type="text" size="40"/>
                            </p>

                        </div>
    	            </div>



                    <div t-attf-class="col-title-block clearfix oe_login_buttons text-center mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                        <button type="submit" class="btn btn-primary btn-block">注册</button>
                        <t t-if="debug">
                            <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm btn-block">Log in as superuser</button>
                        </t>
                        <div class="o_login_auth"/>
                    </div>

                    <input type="hidden" name="redirect" t-att-value="redirect"/>
                </form>
                            </section>

                        </div>
                    </div>

                </t>
        </template>
